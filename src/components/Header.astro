---
import siteConfig from '../data/site-config';
---

<header class="w-full max-w-3xl mx-auto mb-12 sm:mb-16">
    {
        siteConfig.logo && siteConfig.logo?.src ? (
            <a href="/">
                <img src={siteConfig.logo.src} alt={siteConfig.logo.alt || ''} class="max-h-12" />
            </a>
        ) : (
            <a class="flex items-center gap-4 font-serif text-2xl leading-tight font-medium text-theme-foreground sm:text-4xl" href="/">
                <img 
                    src="/cartoon-avatar.png" 
                    alt="Henry" 
                    class="w-12 h-12 rounded-full object-cover sm:w-14 sm:h-14"
                />
                {siteConfig.title}
            </a>
        )
    }
    {siteConfig.subtitle && <p class="text-sm leading-tight mt-1">{siteConfig.subtitle}</p>}
</header>
